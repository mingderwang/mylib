{
  "name": "@muzamint/mylib",
  "version": "0.0.6",
  "description": "A utility package for accessing blockchain.",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "nx exec -- tsdx watch",
    "build": "nx exec -- tsdx build",
    "test": "nx exec -- tsdx test",
    "test:watch": "nx exec -- tsdx test --watch",
    "test:coverage": "nx exec -- tsdx test --coverage",
    "lint": "nx exec -- tsdx lint",
    "prepare": "tsdx build",
    "size": "nx exec -- size-limit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "author": "Ming-der Wang",
  "module": "dist/mylib.esm.js",
  "size-limit": [
    {
      "path": "dist/mylib.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/mylib.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.1.2",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.1",
    "husky": "^8.0.3",
    "size-limit": "^8.1.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5",
    "nx": "16.5.0",
    "nx-cloud": "latest"
  },
  "keywords": [
    "typescript",
    "tsdx",
    "nx"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mingderwang/mylib.git"
  },
  "bugs": {
    "url": "https://github.com/mingderwang/mylib/issues"
  },
  "nx": {
    "targets": {
      "build": {
        "outputs": [
          "{projectRoot}/dist"
        ]
      },
      "test:coverage": {
        "outputs": [
          "{projectRoot}/coverage"
        ]
      }
    }
  }
}
